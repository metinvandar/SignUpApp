<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/nav_fragment_sign_up">

    <fragment
        android:id="@+id/nav_fragment_sign_up"
        android:name="com.metinvandar.signupapp.sigup.SignUpFragment"
        android:label="@string/label_sign_up_fragment">

        <action
            android:id="@+id/action_sign_up_to_confirmation"
            app:destination="@+id/nav_fragment_confirmation"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_from_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_from_right"
            app:popUpTo="@id/nav_graph_main"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_fragment_confirmation"
        android:name="com.metinvandar.signupapp.confirmation.ConfirmationFragment"
        android:label="@string/label_confirmation_fragment" />

</navigation>